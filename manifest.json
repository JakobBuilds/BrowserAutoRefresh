{
  "manifest_version": 2,
  "name": "AutoRefresh",
  "version": "1.0",
  "description": "Überwacht Webseiten auf Änderungen und spielt Sound ab",
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "Page Change Monitor"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    "notification.mp3"
  ]
}